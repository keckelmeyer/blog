<div class="title">
  <h2>Resources <span class="byline">for developers</span></h2>
</div>
<p><%= link_to 'New Resource', new_resource_path %></p>

<table border="border-style: solid">
  <tr>
    <th >Category</th>
    <th >Name</th>
    <th colspan="3"></th>
  </tr>
<% @resources.each do |resource| %>
    <tr >
      <td class="category"><%= resource.category %></td>
      <td><%= link_to resource.title, resource.link %></td>
      <!-- convert title to a link -->
      <td width="10"><%= link_to 'Edit', edit_resource_path(resource) %></td>
      <td width="10"><%= link_to 'Destroy', resource_path(resource),
                                 method: :delete,
                                 data: { confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>