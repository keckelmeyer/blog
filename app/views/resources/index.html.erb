<h1>Resources#index</h1>
<p>Find me in app/views/resources/index.html.erb</p>
<%= link_to 'New Resource', new_resource_path %>

<table width=100% border="border-style: solid">
  <tr>
    <th width=25%>Category</th>
    <th >Name</th>
    <th colspan="3"></th>
  </tr>
<% @resources.each do |resource| %>
    <tr >
      <td class="category"><%= resource.category %></td>
      <td><%= link_to resource.title, resource.link %></td>
      <!-- convert title to a link -->
      <td width="10"><%= link_to 'Edit', edit_resource_path(resource) %></td>
      <td width="10"><%= link_to 'Destroy', resource_path(resource),
                                 method: :delete,
                                 data: { confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>