<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path( :anchor =>"yield") %>
<table width=100% border="border-style: solid">
  <tr>
    <th width=25%>Title</th>
    <th >Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
      <tr >
        <td class="title"><%= article.title %></td>
        <td><%= truncate(article.text, length: 200, omission: '... (continued)' ) %></td>
        <td width="10"><%= link_to 'Show', article_path(article, :anchor =>"yield") %></td>
        <td width="10"><%= link_to 'Edit', edit_article_path(article, :anchor =>"yield") %></td>
        <td width="10"><%= link_to 'Destroy', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>