<div class="title">
  <h2>Categories <span class="byline">for resources</span></h2>
</div>
<%= link_to 'New Category', new_category_path( :anchor =>"yield") %>
<table>
  <tr>
    <th width="150">Name</th>
    <th colspan="3"></th>
  </tr>



  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td width="10"><%= link_to 'Show', category_path(category, :anchor =>"yield") %></td>
        <td width="10"><%= link_to 'Edit', edit_category_path(category, :anchor =>"yield") %></td>
        <td width="10"><%= link_to 'Destroy', category_path(category),
                                   method: :delete,
                                   data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>